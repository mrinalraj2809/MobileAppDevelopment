<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trippleatt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/shop_local"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shop_local"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VehicleOwnerRegistration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShopOwnerRegistration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomerRegistration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShopDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VehicleDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PreviewVehicleOwner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PreviewShopOwner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>